{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:80",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run"
      ],
      "jinja": true,
      "autoStartBrowser": false
    },
    {
      "name": "Gunicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "gunicorn",
      "args": [
        "--workers",
        "3",
        "--bind",
        "0.0.0.0:80",
        "wsgi:app"
      ],
      "justMyCode": false
    }
  ]
}
